# Example Variables File for Packer
# Copy this file and customize it for your environment

# GCP Variables
image_name        = "my-custom-image"
image_description = "Custom image built with Packer"
project_id        = "my-gcp-project"
image_family      = "my-image-family"
image_project_id  = ["ubuntu-os-cloud"]
zone              = "us-central1-a"
ssh_username      = "packer"
machine_type      = "n1-standard-8"
image_description = "Training optimized image"

# Workload Optimization Flags
# Enable the specific optimizations you need for your use case
enable_training   = true   # Training optimizations (DeepSpeed, FSDP, etc.)
enable_inference  = false  # Inference optimizations (vLLM, TensorRT-LLM)
enable_multinode  = false  # Multi-node optimizations (NCCL, RDMA)

# Software Versions
driver_version	 = "590.48.01"
cuda_version      = "13-1"  # CUDA toolkit version (e.g., "12-4", "12-6")
pytorch_version   = "2.10.0" # PyTorch version (e.g., "2.5.1", "2.6.0")
